<p id="notice"><%= notice %></p>

<h1>Listing Skills</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td><%= link_to 'Show', self.send(skill_path, skill_path_params(skill)) %></td>
        <td><%= link_to 'Edit', self.send(skill_path('edit'), skill_path_params(skill)) %></td>
        <td><%= link_to 'Destroy', self.send(skill_path, skill_path_params(skill)), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Skill', self.send(skill_path('new')) %>
