<div class="row">
  <div class="col-sm-9">
    <%= form_for :skills, url: update_candidate_skill_index_path(params[:candidate_id]), method: :put do |f|%>
      <div class="form-group">
        <%= f.label :skills,class:"control-label col-sm-2" %>
        <div class="col-sm-10">
            <%= f.text_field  :names, class:"form-control",'data-role':'tagsinput',value:@entity_skills.map{|x| x.name}.join(','), id: "typeahead", rows: 5%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2">
          <%= f.submit "Update skills",class:"btn btn-default update-skill-button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
