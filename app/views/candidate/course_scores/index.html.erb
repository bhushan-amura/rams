<p id="notice"><%= notice %></p>

<h1>Listing Candidate Course Scores</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidate_course_scores.each do |candidate_course_score| %>
    <% course_scores_path_params = { candidate_id:params[:candidate_id], id:candidate_course_score.id } %>
      <tr>
        <td>
          <%= candidate_course_score.qualification.course %>
        </td>
        <td><%= candidate_course_score.score %></td>
        <td><%= candidate_course_score.start_year%></td>
        <td><%= candidate_course_score.end_year%></td>
        <td><%= link_to 'Show', candidate_course_score_path(course_scores_path_params) %></td>
        <td><%= link_to 'Edit', edit_candidate_course_score_path(course_scores_path_params) %></td>
        <td><%= link_to 'Destroy', candidate_course_score_path(course_scores_path_params), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course score', new_candidate_course_score_path %>
