<%= form_for(@candidate) do |f| %>
  <% if @candidate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>

      <ul>
      <% @candidate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table>
    <tr>
      <th><%= f.label(:first_name)%></th>
      <td><%= f.text_field(:first_name)%></td>
    </tr>
    <tr>
      <th><%= f.label(:last_name)%></th>
      <td><%= f.text_field(:last_name)%></td>
    </tr>
    <tr>
      <th>Date of Birth</th>
      <td><%= f.date_select(:dob, start_year:1980)%></td>
    </tr>
    <tr>
      <th>Gender</th>
      <td><%= f.select :gender, options_for_select(Candidate::GENDER, selected_key = f.object.gender) %></td>
    </tr>
    <tr>
      <th>Marital Status</th>
      <td><%= f.select :marital_status, options_for_select(Candidate::MARITAL, selected_key = f.object.marital_status) %></td>
    </tr>
    <tr>
      <th>Have Job?</th>
      <td><%= f.text_field :status%></td>
    </tr>
    <tr>
      <th>Languages</th>
      <td><%= f.text_field :languages%></td>
    </tr>
    <tr>
      <th>Summary</th>
      <td><%= f.text_area :summary, :size => '40x10'%></td>
    </tr>
  </table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
