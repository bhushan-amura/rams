<%= form_for @candidate,html:{ class: 'form-horizontal'} do |f| %>
  <% if @candidate.errors.any? %>
    <div class="alert alert-danger">
      <div id="error_explanation">
        <h3><%= pluralize(@candidate.errors.count, "error") %> prohibited this candidate from being saved:</h3>

        <ul>
          <% @candidate.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label(:first_name, class: "control-label col-sm-2")  %>
    <div class="col-sm-10">
      <%= f.text_field(:first_name, class: "form-control",placeholder:"Enter first name") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label(:last_name, class: "control-label col-sm-2")  %>
    <div class="col-sm-10">
      <%= f.text_field(:last_name, class: "form-control",placeholder:"Enter last name") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label(:dob,"Date of Birth", class: "control-label col-sm-2")  %>
    <div class="col-sm-10">
      <%= f.date_field(:dob, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label(:gender, class: "control-label col-sm-2")  %>
    <div class="col-sm-10">
      <%= f.select :gender, options_for_select(Candidate::GENDER, selected_key = @candidate.gender),{},{class:"form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label(:marital_status,"Marital Status", class: "control-label col-sm-2")  %>
    <div class="col-sm-10">
      <%= f.select :marital_status, options_for_select(Candidate::MARITAL, selected_key = @candidate.marital_status),{},{class:"form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label(:status,"Have Job?", class: "control-label col-sm-2")  %>
    <div class="col-sm-10">
      <%= f.text_field(:status, class: "form-control",placeholder:"Enter job status") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label(:languages,"Languages", class: "control-label col-sm-2")  %>
    <div class="col-sm-10">
      <%= f.text_field(:languages, class: "form-control",placeholder:"Enter languages you know") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label(:summary,"Summary", class: "control-label col-sm-2")  %>
    <div class="col-sm-10">
      <%= f.text_area(:summary, class: "form-control",rows:3,placeholder:"Write something about yourself") %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-3">
      <%= f.submit "Update",class: "btn btn-default" %>
    </div>
  </div>
<% end %>

