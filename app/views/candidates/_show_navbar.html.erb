<div class="container">
  <h2 class="text-center jumbotron">Showing <%= current_user.info.first_name.capitalize %>'s Profile </h2>
  <div class="row jumbotron">
    <div class="col-sm-3">
      <div class="sidebar-nav">
        <div class="navbar navbar-default" role="navigation">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <span class="visible-xs navbar-brand">Sidebar menu</span>
          </div>
          <div class="navbar-collapse collapse sidebar-navbar-collapse">
            <ul class="nav navbar-nav">
              <li><%= link_to "Profile", candidate_path(params[:id]||params[:candidate_id]),onclick: "javascript:window.location.reload()" %></li>
              <li><%= link_to "Achievements", candidate_achievements_path(candidate_id: params[:id]||params[:candidate_id]) , onclick: "javascript:window.location.reload()"%></li>
