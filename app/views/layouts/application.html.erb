<!DOCTYPE html>
<html>
  <head>
    <title>Rams</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar nav-custom navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <%= image_tag 'rams.png' ,class: "logo-size" %>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li>
            <% if user_signed_in? %>
              <li, class='navbar-brand'> RAMS </li>
            <% else %>
              <%= link_to 'RAMS', root_path, class: 'navbar-brand' %>
            <% end %>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= current_user.email %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Settings', edit_user_registration_path %></li>
                <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>

          <% else %>
            <li>
              <%= link_to 'Log In', new_user_session_path %>
            </li>
            <li>
              <%= link_to 'Sign Up Candidate', new_user_registration_path(:role => "candidate") %>
            </li>
            <li>
              <%= link_to 'Sign Up Company', new_user_registration_path(:role => "company") %>
            </li>
          <% end %>
          </ul>  

        </div>
      </div>
    </nav>
    
    <div class="container text-center custom">
      <div class="row">
        <%= yield %>  
      </div>
    </div>


  </body>
</html>