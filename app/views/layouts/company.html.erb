<!DOCTYPE html>
<html>
  <head>
    <title>Rams</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="container-fluid nav-custom">
      <div class="navbar-header">
        <%= image_tag 'rams.png' ,class: "logo-size" %>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to "HOME", home_company_path(@company) %>
          </li>
          <li>
            <a href="#">Messages</a>
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-user"></span>
              <%= current_user.info.name %></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'Edit Profile', edit_company_path(@company) %>
              </li>
              <li>
                <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        </ul>
        <form class="navbar-form navbar-right" role="search">
          <div class="form-group input-group">
            <input type="text" class="form-control" placeholder="Search..">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button">
                <span class="glyphicon glyphicon-search"></span>
              </button>
            </span>
          </div>
        </form>
      </div>
    </div>
  </nav>

  <div class="container text-center">
    <div class="row">

      <!-- left================== -->
      <%= render 'layouts/company/left_container' %>

      <!-- center================ -->
      <%= render 'layouts/company/center_container' %>

      <!-- right================= -->
      <%= render 'layouts/company/right_container' %>

    </div>
  </div>

  <footer class="container-fluid text-center">
    <p>Footer Text says : "Hello World!!"</p>
  </footer>

</body>
</html>
