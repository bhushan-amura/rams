<!DOCTYPE html>
<html>
  <head>
    <title>Rams</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar nav-custom navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <%= image_tag 'rams.png' ,class: "logo-size" %>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to "Home", home_company_path(current_user.info) %>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown">
                <span class="glyphicon glyphicon-user"></span>
                <%= current_user.info.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'Edit Profile', edit_company_path(current_user.info) %>
                </li>
                <li>
                  <%= link_to 'Settings', edit_user_registration_path %>
                </li>
                <li>
                  <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </li>

          </ul>
          <form class="navbar-form navbar-right" role="search">
            <div class="form-group input-group">
              <input type="text" class="form-control" placeholder="Search..">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">
                  <span class="glyphicon glyphicon-search"></span>
                </button>
              </span>
            </div>
          </form>
        </div>
      </div>
    </nav>

    <div class="container text-center custom">
      <% if flash[:alert] %>
         <div class="alert alert-danger">
           <span><%= flash[:alert] %></span>
         </div>
      <% elsif flash[:success] %>
        <div class="alert alert-success">
          <span><%= flash[:success] %></span>
        </div>
      <%end%>
      <div class="row">
        <!-- left================== -->
        <%= render 'layouts/company/left_container' %>
        <!-- center================ -->
        <%= render 'layouts/company/center_container' %>
        <!-- right================= -->
        <%= render 'layouts/company/right_container' %>
      </div>
    </div>

    <footer class="container-fluid text-center">
      <p>Recruitment Agency Management System</p>
    </footer>

  </body>
</html>
