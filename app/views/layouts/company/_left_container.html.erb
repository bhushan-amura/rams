<div class="col-sm-3 well">
  <%= link_to @company.url do %>
  <div class="well nounderline">
    <p>
      <div class="nounderline">
        <h3><%= @company.name %></h3>
      </div>
    </p>
    <%= image_tag( @company.logo , size: "120x70", alt: @company.name) %>
  </div>
  <% end %>
  <div class="well">
    <p>
      <span class="label label-default">Tagline</span>
    </span>
  </p>
  <p>
    <h4>
      <span><%= @company.tagline %></span>
    </h4>
  </p>
</div>

<p>
  <%= link_to "Post Job Opening", new_company_job_path(@company),class: "btn btn-default" %>
</p>
</div>
