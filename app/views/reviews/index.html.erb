<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.text %></td>
        <td><%#= review.company.name %></td>
        <td><%#= review.company.tagline %></td>
        <td><%= link_to 'Show', review_path(review_path_params(review)) %></td>
        <td><%= link_to 'Destroy', review_path(review_path_params(review)), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
