<%= form_for(@company_job_opportunity,url: required_url) do |f| %>
  <% if @company_job_opportunity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company_job_opportunity.errors.count, "error") %> prohibited this company_job_opportunity from being saved:</h2>

      <ul>
      <% @company_job_opportunity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <th><%= f.label(:title) %></th>
      <td><%= f.text_field(:title) %></td>
    </tr>
    <tr>
      <th><%= f.label(:shift) %></th>
      <td><%= f.text_field(:shift) %></td>
    </tr>
    <tr>
      <th><%= f.label(:description) %></th>
      <td><%= f.text_field :description, :size => '40x10' %></td>
    </tr>
    <tr>
      <th><%= f.label(:number_of_positions) %></th>
      <td><%= f.number_field(:number_of_positions) %></td>
    </tr>
    <tr>
      <th><%= f.label(:status) %></th>
      <td><%= f.select :status, options_for_select(Company::JobOpportunity::STATUS ,selected_key = f.object.status) %></td>
    </tr>
    <tr>
      <th><%= f.label(:experience) %></th>
      <td><%= f.range_field(:experience) %></td>
    </tr>
    <tr>
      <th><%= f.label :ctc,id:"ctc_label" %></th>
      <td><%= f.range_field :ctc, :in => 1..100, :step => ".1" %></td>
    </tr>

  </table>

      
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
