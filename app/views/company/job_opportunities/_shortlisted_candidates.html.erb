<div class="well form-horizontal">
  <form>
    <% @shortlisted_candidates.each do |sc| %>
    <div class="form-group">
      <div class="col-sm-1 col-sm-offset-1">
        <div class="checkbox">
          <label>
            <input type="checkbox">
          </label>
        </div>
      </div>
      <div class="col-sm-3">
        <p class="text-left"><%= sc.first_name %>
          <%= sc.last_name %></p>
      </div>
    </div>
    <% end %>
    <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>
